{
  "extends":  ["airbnb", "prettier"],
  "plugins": ["prettier","emotion"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "indent": ["error", 2, {"ignoredNodes": ["JSXElement"], "SwitchCase": 1 }],
    "react/jsx-indent": ["error", 2],
    "no-underscore-dangle": "off",
    "emotion/jsx-import": "error",
    "no-nested-ternary": "off",
    "react/jsx-one-expression-per-line": "off",
    "react/forbid-prop-types": ["on", { "forbid": ["any", "array"]}],
    "no-shadow": "off",
    "react/prop-types": [2, {}],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "es5",
        "printWidth": 100
      }
    ]
  }
}
